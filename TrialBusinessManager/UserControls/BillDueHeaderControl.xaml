<UserControl x:Class="TrialBusinessManager.UserControls.BillDueHeaderControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    HorizontalAlignment="Left"
    Height="25" Width="600">

    <Grid Margin="6"  x:Name="LayoutRoot" Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1.5*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock VerticalAlignment="Center"   FontSize="11"  HorizontalAlignment="Center" Grid.Column="0" TextWrapping="Wrap"   Text="Bill Code" TextDecorations="Underline" FontWeight="Bold" />
        <TextBlock VerticalAlignment="Center"   FontSize="11"  HorizontalAlignment="Center" Grid.Column="1" TextWrapping="Wrap" TextDecorations="Underline" Text="Issue Date" FontWeight="Bold" />
        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center"  FontSize="11"  Grid.Column="2" TextWrapping="Wrap" TextDecorations="Underline" Text="Dealer Due Amount (Tk)" FontWeight="Bold" />
        

    </Grid>

</UserControl>

